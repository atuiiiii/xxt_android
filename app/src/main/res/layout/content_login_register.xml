<?xml version="1.0" encoding="utf-8"?>
<layout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="bid.xiaocha.xxt.ui.activity.LoginRegisterActivity"
            tools:showIn="@layout/activity_login_register">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_user_id"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/edt_verification_code"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:id="@+id/btn_get_verification_code"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆"
                    android:id="@+id/btn_login"/>

        </LinearLayout>
</layout>
